---
import Layout from '@layouts/MainLayout.astro';
import Hi from '@components/Hi.astro';
import Button from '@components/button/Primary.astro';

// SEO
import { HOME_PAGE_SEO } from '@data/seo';

const data = {
  span: "I'm",
  title: 'Rifky Alamsyah',
  desc: 'UI Designer & Front-End Web Developer.',
};
---

<Layout
  title={HOME_PAGE_SEO.title}
  seoDesc={HOME_PAGE_SEO.seoDesc}
  ogImage={HOME_PAGE_SEO.ogImage}
  url={HOME_PAGE_SEO.url}
  doamin={HOME_PAGE_SEO.domain}
>
  <main class='mt-auto'>
    <div class='relative h-full w-full bg-white'></div>
  </main>
  <section class='py-20'>
    <div class='container mx-auto'>
      <Hi />
      <h1 class='text-center text-3xl sm:text-5xl'>
        <span
          class='bg-gradient-to-r from-dark-300 to-dark-900 bg-clip-text text-transparent'
        >{data.span}
        </span>
        {data.title}
      </h1>
      <p class='mt-2 text-center text-xl text-dark-500 dark:text-dark-300'>
        {data.desc}
      </p>
      <div class='flex justify-center mt-6'>
        <Button
          href='/about'
          name='Discover ðŸ‘€'
          radius='rounded-full'
          data-astro-prefetch
        />
      </div>
    </div>
  </section>
</Layout>
