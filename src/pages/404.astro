---
import Layout from '@layouts/MainLayout.astro';
import Button from '@components/button/Primary.astro';

// SEO
const title = '404 - Page Not Found';
const seoDesc = 'Page Not Found';

const data = {
  span: '404',
  title: 'Not Found',
  desc: 'Sorry, Page Not Found'
}
---

<Layout {title} {seoDesc}>
  <main class='mt-auto'>
    <section class='py-20'>
      <div class='container mx-auto text-center'>
        <p class='text-4xl text-gray-500 dark:text-gray-400 mb-2'>Whoops!</p>
        <h1 class='text-4xl sm:text-6xl'>
          <span
            class='font-bold bg-gradient-to-r from-wood-500 to-wood-800 bg-clip-text text-transparent'
            >{data.span}
          </span>
          {data.title}
        </h1>
        <p class='text-xl text-gray-600 dark:text-gray-400 mt-2'>
          {data.desc}
        </p>
        <div class='mt-8'>
          <Button
            href='/'
            name='Back to Home'
            target=''
            radius='rounded-full'
          />
        </div>
      </div>
    </section>
  </main>
</Layout>
