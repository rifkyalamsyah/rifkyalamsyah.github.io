---
import Picture from 'astro/components/Picture.astro';
import Badge from '@components/blog/BadgeSm.astro';

const { link, imgSrc, imgAlt, category, title, readingTime, pubDate } =
  Astro.props;
---

<article>
  <div
    class='p-1 lg:p-2 bg-white dark:bg-dark-950/20 border border-dark-100/60 dark:border-dark-800/30 rounded-xl duration-1000'
  >
    <a href={link}>
      <Picture
        src={imgSrc}
        alt={imgAlt}
        class='rounded-xl'
        formats={['avif', 'webp']}
        loading={'eager'}
      />
    </a>
    <div class='flex flex-col gap-2 text-wrapper mt-4 mb-3 px-2 sm:px-3'>
      <div class='flex'>
        <Badge value={category} />
      </div>
      <a
        href={link}
        class='text-xl text-black dark:text-white hover:text-dark-700 dark:hover:text-dark-200 line-clamp-2'
      >
        <h3>{title}</h3>
      </a>
      <p class='text-sm text-gray-500 dark:text-gray-400'>
        {readingTime} -
        {pubDate}
      </p>
    </div>
  </div>
</article>
