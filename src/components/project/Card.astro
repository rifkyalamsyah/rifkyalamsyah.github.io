---
import BtnPrimary from '@components/project/BtnPrimary.astro';
import BtnSecondary from '@components/project/BtnSecondary.astro';
import Picture from 'astro/components/Picture.astro';

const { slug, imgUrl, imgAlt, title, url } = Astro.props;
---

<article>
  <div
    class='pb-5 h-full flex flex-col justify-between bg-white dark:bg-dark-950/40 border border-dark-100/60 dark:border-dark-800/30 rounded-xl duration-1000'
  >
    <a href={slug}>
      <Picture
        src={imgUrl}
        alt={imgAlt}
        class='rounded-xl'
        width={1280}
        height={700}
        formats={['avif', 'webp']}
        loading={'eager'}
      />
    </a>
    <div class='h-full flex flex-col justify-between gap-2'>
      <div class='mt-4 px-3 lg:px-4 flex flex-col'>
        <a
          href={slug}
          class='text-lg text-black dark:text-white hover:text-dark-700 dark:hover:text-dark-200 line-clamp-2'
        >
          <h3 class="lg:text-2xl">{title}</h3>
        </a>
      </div>
      <div class='mt-2 px-3 lg:px-4 flex gap-3'>
        <BtnPrimary href={slug} name='See Details' />
        <BtnSecondary href={url} name='Visit Website' target='_blank' />
      </div>
    </div>
  </div>
</article>
